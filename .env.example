# Application Configuration
APP_NAME=AI-Access-Sentinel
APP_VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Dashboard Configuration
DASHBOARD_PORT=8501

# Model Configuration
MODEL_PATH=models/trained
ANOMALY_CONTAMINATION=0.05
ANOMALY_THRESHOLD=-0.3
RISK_SCORE_THRESHOLD=75

# Data Configuration
DATA_PATH=data
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
SAMPLE_DATA_SIZE=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai-access-sentinel.log

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Database (if using real DB instead of files)
# DATABASE_URL=postgresql://user:password@localhost/iam_sentinel

# Alerts
ALERT_EMAIL=security@company.com
ALERT_SLACK_WEBHOOK=

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_BLOCKING=false
ENABLE_EMAIL_ALERTS=false
